{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix functions run build"
        ]
    }
}